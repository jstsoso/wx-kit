{
  "name": "wx-kit",
  "private": true,
  "scripts": {
    "start": "yarn && cross-env APP_ENV=development gulp dev",
    "staging": "yarn && cross-env APP_ENV=staging gulp build",
    "build": "yarn && cross-env APP_ENV=production gulp build",
    "lint": "yarn && stylelint --max-warnings 0 \"src/**/*.less\" && eslint --max-warnings 0 \"src/**/*.js\"",
    "deploy:staging": "yarn staging && cross-env APP_ENV=staging node script/miniprogram-ci.js",
    "deploy:production": "yarn build && cross-env APP_ENV=production node script/miniprogram-ci.js"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    },
    "commit-msg": "echo $HUSKY_GIT_PARAMS"
  },
  "lint-staged": {
    "*.less": "stylelint --max-warnings 0",
    "*.js": "eslint --max-warnings 0"
  },
  "devDependencies": {
    "@babel/core": "^7.12.13",
    "@babel/eslint-parser": "^7.12.13",
    "@babel/plugin-proposal-class-properties": "^7.12.13",
    "@babel/plugin-proposal-decorators": "^7.12.13",
    "@babel/plugin-proposal-export-default-from": "^7.12.13",
    "@babel/plugin-proposal-nullish-coalescing-operator": "^7.12.13",
    "@babel/plugin-proposal-optional-chaining": "^7.12.13",
    "@babel/plugin-proposal-private-methods": "^7.12.13",
    "@babel/plugin-transform-runtime": "^7.12.15",
    "@babel/preset-env": "^7.12.13",
    "autoprefixer": "^10.2.4",
    "babel-loader": "^8.2.2",
    "babel-plugin-lodash": "^3.3.4",
    "babel-plugin-module-resolver": "^4.1.0",
    "babel-plugin-transform-inline-environment-variables": "^0.4.3",
    "colors": "^1.4.0",
    "cross-env": "^7.0.3",
    "cssnano": "^4.1.10",
    "del": "^6.0.0",
    "eslint": "^7.19.0",
    "eslint-plugin-import": "^2.22.1",
    "gulp": "^4.0.2",
    "gulp-babel": "^8.0.0",
    "gulp-changed": "^4.0.2",
    "gulp-eslint": "^6.0.0",
    "gulp-if": "^3.0.0",
    "gulp-less": "^4.0.1",
    "gulp-postcss": "^9.0.0",
    "gulp-rename": "^2.0.0",
    "gulp-sourcemaps": "^3.0.0",
    "gulp-stylelint": "^13.0.0",
    "husky": "^4.3.8",
    "lint-staged": "^10.5.4",
    "miniprogram-ci": "^1.0.98",
    "node-notifier": "^9.0.0",
    "postcss": "^8.2.5",
    "postcss-px2units": "^0.2.0",
    "stylelint": "^13.9.0",
    "stylelint-config-standard": "^20.0.0",
    "through2": "^4.0.2",
    "webpack": "^5.21.2"
  },
  "dependencies": {
    "@babel/runtime-corejs3": "^7.12.13",
    "big.js": "^6.0.3",
    "dayjs": "^1.10.4",
    "lodash": "^4.17.20",
    "mobx": "^6.1.5"
  }
}
